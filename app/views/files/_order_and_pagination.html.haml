.filesOrderAndPagination
  .filesOrder
    %span
      = "#{:order_by.l}:"
    - temp_actions = [                                                                                                                                                       |
      {:name => :filename.l, :url => {:page => (page == 0 ? nil : page), :orderBy => 'filename'}, :cond => true, :class => (order == 'filename' ? 'selected' : nil)},        |
      {:name => :post_time.l, :url => {:page => (page == 0 ? nil : page), :orderBy => 'created_on'}, :cond => true, :class => (order == 'created_on' ? 'selected' : nil)}    |
      ]                                                                                                                                                                      |
    = action_list temp_actions
  .filesPagination
    = pagination_links "#{url_for {}}?", pagination unless pagination.length <= 1
