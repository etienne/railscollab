!!! 1.1
%html
  %head
    %title= h page_title
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    = stylesheet_link_tag 'dialog'
    = stylesheet_link_tag 'general/rewrites'
    = stylesheet_link_tag 'general/construction'
    = stylesheet_link_tag 'general/forms'
    = javascript_include_tag 'jquery.js'
    = javascript_include_tag 'jquery-ui.js'
    = javascript_include_tag 'jrails.js'
    = javascript_include_tag 'application.js'
  %body
    #dialog
      - if !Company.owner.nil? and Company.owner.logo?
        #dialogLogo
          %img{:src => Company.owner.logo.url}/

      .inner
        %h1
          = h page_title
        - if flash[:message]
          %div{:class => "StatusMessage #{flash[:error] ? 'flash_error' : 'flash_success'}", :id => flash[:error] ? 'error' : 'success'}
            = h flash[:message]
        = yield
