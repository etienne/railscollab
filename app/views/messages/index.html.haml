- if not @messages.empty?
  #messages
    #messagesPaginationTop
      = pagination_links "#{messages_path(@active_project)}?", @pagination unless @pagination.length <= 1
    = render :partial => (@display_list ? 'messages/show_list' : 'messages/show'), :collection => @messages, :locals => {:on_message_page => false}
    #messagesPaginationBottom
      = pagination_links "#{messages_path(@active_project)}?", @pagination unless @pagination.length <= 1
- else
  %p
    - if @category.nil?
      = :no_messages_in_project.l
    - else
      = :no_messages_in_category.l
