- form_tag milestones_path :method => :post do
  = error_messages_for :milestone

  %div
    %label{:for => "milestoneFormName"}
      = "#{:name.l}:"
      %span.label_required *
    = text_field 'milestone', 'name', :id => 'milestoneFormName', :class => 'long autofocus'
  %div
    %label{:for => "milestoneDueDate"}
      = "#{:due_date.l}:"
    = date_select 'milestone', 'due_date', :id => 'milestoneDueDate', :class => 'short'

  - if @logged_user.member_of_owner?
    .formBlock
      %label{:for => "milestoneIsPrivate"}
        = "#{:private_milestone.l}:"
        %span.desc= :milestones_private_info.l
      = yesno_toggle 'milestone', 'is_private', :id => 'milestoneIsPrivate', :class => 'checkbox'

  %button.submit{:type => "submit"}= :add_milestone.l
  %a.cancel{:href => "#"}
    = :cancel.l
