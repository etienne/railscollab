- form_tag task_path(:task_list_id => @task.task_list_id, :id => @task.id), :method => :put, :class => 'editTaskItem' do
  = render :partial => 'form', :object => @task

  %div
    %button.submit{:type => "submit"}= :edit_task.l
    = :or.l
    = link_to :cancel.l, task_path(:task_list_id => @task.task_list_id, :id => @task.id), :class => 'cancel'
